<?xml version="1.0" encoding="ISO-8859-1"?>
<paramInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://seadas.gsfc.nasa.gov/software/schemas/ParamInfo-1.0.xsd">
    <programMetaData>
        <hasParFile>true</hasParFile>
        <parFileOptionName>par</parFileOptionName>
        <primaryOptions>
            <primaryOption>ifile</primaryOption>
            <primaryOption>ofile</primaryOption>
        </primaryOptions>
    </programMetaData>
    <options>
        <option type="ifile">
            <name>ifile</name>
            <value></value>
            <default></default>
            <description>list of input L3 binned files</description>
            <source>command line</source>
            <aliases>
                <alias>ifile1</alias>
            </aliases>
            <usedAs>option</usedAs>
            <order>0</order>
        </option>
        <option type="ofile">
            <name>ofile</name>
            <value>l3binmerged.nc</value>
            <default></default>
            <description>merged level-3 binned file</description>
            <alias>ofile1</alias>
            <usedAs>option</usedAs>
            <order>1</order>
        </option>
        <option type="string">
            <name>prod</name>
            <value></value>
            <default></default>
            <description>bin products [default=all products in L3 file]</description>
            <usedAs>option</usedAs>
            <colSpan>4</colSpan>
            <order>2</order>
        </option>



        <option type="float">
            <name>latnorth</name>
            <value></value>
            <default></default>
            <source>default</source>
            <description>Northernmost Latitude</description>
            <usedAs>option</usedAs>
            <order>3</order>
        </option>
        <option type="float">
            <name>latsouth</name>
            <value></value>
            <default></default>
            <source>default</source>
            <description>Southernmost Latitude</description>
            <usedAs>option</usedAs>
            <order>4</order>
        </option>
        <option type="float">
            <name>lonwest</name>
            <value></value>
            <default></default>
            <source>default</source>
            <description>Westernmost Longitude</description>
            <usedAs>option</usedAs>
            <order>5</order>
        </option>
        <option type="float">
            <name>loneast</name>
            <value></value>
            <default></default>
            <source>default</source>
            <description>Easternmost Longitude</description>
            <usedAs>option</usedAs>
            <order>6</order>
        </option>


        <option type="boolean">
            <name>union_bins</name>
            <value>false</value>
            <default>false</default>
            <description>Output file contains the union of input bins</description>
            <usedAs>option</usedAs>
            <order>7</order>
        </option>

        <option type="boolean">
            <name>noext</name>
            <value>false</value>
            <default>false</default>
            <description>set to 1 to suppress generation of external files</description>
            <usedAs>option</usedAs>
            <order>8</order>
        </option>

        <option type="boolean">
            <name>verbose</name>
            <value>true</value>
            <default>false</default>
            <description>Allow more verbose screen messages [default should be true for GUI]</description>
            <usedAs>option</usedAs>
            <order>9</order>
        </option>

    </options>
</paramInfo>
